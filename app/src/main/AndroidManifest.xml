<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.felix.sensordemo">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".app.SensorDemoApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".view.DemoListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".view.OrientationActivity" />

        <activity android:name=".view.AccelerometerActivity" />

        <activity android:name=".view.GyroscopeActivity" />

        <activity android:name=".view.LightActivity" />

        <activity
            android:name=".view.SensorDetailActivity"
            android:theme="@style/AppTheme.Dialog" />

    </application>

</manifest>
